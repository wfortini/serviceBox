<?xml version="1.0" encoding="utf-8"?>
<resources>

    
    <style name="AppBaseTheme" parent="android:Theme.Light">     
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="SimNaoSwitch" parent="Holo.Switch.Light">
        <item name="textOn">@string/sim</item>
        <item name="textOff">@string/nao</item>
    </style>
    
    
    <style name="Theme.ServiceBox.Light_Base" parent="Holo.Theme.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/wnd_bg_servicebox</item>
        <item name="android:listViewStyle">@style/TransparentListView</item>
        <item name="android:expandableListViewStyle">@style/TransparentExpandableListView</item>
        <item name="actionModeStyle">@style/solid_ActionMode</item>
       <!--<item name="android:actionModeStyle">@style/solid_ActionMode</item>-->
        <item name="actionModeCloseButtonStyle">@style/ActionMode_CloseButton</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionMode_CloseButton</item>
        <item name="actionBarStyle">@style/solid_ActionBar</item>
        <item name="android:actionBarStyle">@style/solid_ActionBar</item>
        <item name="actionBarTabTextStyle">@style/ActionBar_TabTextStyle</item>
        <item name="android:actionBarTabTextStyle">@style/ActionBar_TabTextStyle</item>
        <item name="android:buttonStyle">@style/ServiceBox.BeigeButton</item>
        <item name="android:popupMenuStyle">@android:style/Widget.Holo.Light.PopupMenu</item>
        <item name="dropDownListViewStyle">@android:style/Widget.Holo.Light.ListView.DropDown</item>
        <item name="actionBarTabStyle">@style/servicebox_ActionBarTabStyle</item>
        <item name="android:actionBarTabStyle">@style/servicebox_ActionBarTabStyle</item>
        <item name="actionBarItemBackground">@drawable/item_bg_selectable_servicebox</item>
        <!-- <item name="android:actionBarItemBackground">@drawable/item_bg_selectable_trovebox</item> -->
        <item name="selectableItemBackground">@drawable/item_bg_selectable_servicebox</item>
        <item name="actionDropDownStyle">@style/servicebox_DropDownNav</item>
        <item name="android:actionDropDownStyle">@style/servicebox_DropDownNav</item>
        <item name="popupMenuStyle">@style/servicebox_PopupMenu</item>
        
        <item name="listPopupWindowStyle">@style/servicebox_PopupMenu</item>
        
        <item name="android:dropDownListViewStyle">@style/servicebox_DropDownListView</item>
        <item name="spinnerDropDownItemStyle">@style/servicebox_DropDownItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/servicebox_DropDownItem</item>
        <item name="actionBarWidgetTheme">@style/Theme.example.widget</item>
        <!-- <item name="android:actionBarWidgetTheme">@style/Theme.example.widget</item> -->
        <item name="actionMenuTextColor">@color/ab_fg_white</item>
        <item name="android:actionMenuTextColor">@color/ab_fg_white</item>
        <item name="spinnerItemStyle">@style/servicebox_SpinnerItemStyle</item>
        <item name="android:spinnerItemStyle">@style/servicebox_SpinnerItemStyle</item>
        <item name="textAppearanceLargePopupMenu">@style/servicebox_PopupMenuTextLarge</item>
        <item name="android:textAppearanceLargePopupMenu">@style/servicebox_PopupMenuTextLarge</item>
        <item name="dialogItemTextAppearance">@style/servicebox_PopupMenuTextLarge</item>
    </style>
    
    <style name="Theme.ServiceBox.Light" parent="Theme.ServiceBox.Light_Base"></style>
    
    <style name="Theme.ServiceBox.SemActionBar" parent="Holo.Theme.NoActionBar">
        <item name="android:windowBackground">@drawable/wnd_bg_login_servicebox</item>
    </style>
    
    <style name="TransparentExpandableListView" parent="@android:style/Widget.ExpandableListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>
    
    <style name="servicebox_PopupMenu" parent="Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_trovebox</item>
        <item name="android:textAppearance">@style/servicebox_PopupMenuText</item>
    </style>

    <style name="servicebox_PopupMenuText" parent="TextAppearance.Sherlock.Widget.PopupMenu">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>    

    <style name="servicebox_PopupMenuTextLarge" parent="TextAppearance.Sherlock.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>
    
    <style name="TransparentListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>
    
    <style name="solid_ActionBar" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_bg_servicebox</item>
        <item name="android:background">@drawable/ab_bg_servicebox</item>
        <item name="backgroundStacked">@drawable/tab_bg_servicebox</item>
        <!-- item name="android:backgroundStacked">@drawable/tab_bg_trovebox</item -->
        <item name="titleTextStyle">@style/ActionBar_TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/ActionBar_TitleTextStyle</item>
    </style>
    
    <style name="servicebox_DropDownItem" parent="@style/Widget.Sherlock.DropDownItem.Spinner">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>
    
    <style name="servicebox_SpinnerItemStyle" parent="Widget.Sherlock.TextView.SpinnerItem">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>
    
    <style name="solid_ActionMode" parent="@style/Widget.Sherlock.Light.ActionMode.Inverse">
        <item name="background">@drawable/ab_bg_servicebox</item>
        <item name="android:background">@drawable/ab_bg_servicebox</item>
        <item name="titleTextStyle">@style/ActionBar_TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/ActionBar_TitleTextStyle</item>
    </style>
    
    <style name="ServiceBox.BeigeButton" parent="Holo.Button">
        <item name="android:background">@drawable/btn_bg_beige_trovebox</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>
    
    <style name="Theme.ServiceBox.Dialog.Light" parent="Holo.Theme.Dialog.Alert.Light">
        <item name="android:buttonStyle">@style/ServiceBox.BeigeButton</item>
    </style>
    
    <style name="servicebox_DropDownListView" parent="Holo.ListView.DropDown.Light">
        <item name="android:listSelector">@drawable/item_bg_selectable_servicebox</item>
    </style>
    
    <style name="servicebox_ActionBarTabStyle" parent="@style/Widget.Sherlock.ActionBar.TabView">
        <item name="background">@drawable/tab_bg_indicator_ab_servicebox</item>
        <item name="android:background">@drawable/tab_bg_indicator_ab_servicebox</item>
    </style>
    
    <style name="ActionMode_CloseButton" parent="Widget.Sherlock.ActionButton.CloseMode">
        <item name="android:background">@drawable/item_bg_selectable_trovebox</item>
    </style>
    
    <style name="servicebox_DropDownNav" parent="@style/Widget.Sherlock.Spinner.DropDown.ActionBar">
        <item name="background">@drawable/spinner_bg_ab_trovebox</item>
        <item name="android:background">@drawable/spinner_bg_ab_trovebox</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_trovebox</item>
        <item name="android:dropDownSelector">@drawable/item_bg_selectable_trovebox</item>
    </style>
    
    <style name="ActionBar_TabTextStyle" parent="@style/Widget.Sherlock.Light.ActionBar.TabText">
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>
    
    <style name="ActionBar_TitleTextStyle" parent="@style/TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ab_fg_white</item>
    </style>
    
    <style name="Theme.ServiceBox.DialogActivity.Light" parent="Holo.Theme.Dialog.Light">
        <item name="android:buttonStyle">@style/ServiceBox.BeigeButton</item>
    </style>
    
    <style name="Theme.example.widget" parent="@style/Theme.Sherlock">
        <item name="popupMenuStyle">@style/servicebox_PopupMenu</item>
        <item name="dropDownListViewStyle">@style/servicebox_DropDownListView</item>
        <item name="android:popupMenuStyle">@style/servicebox_PopupMenu</item>
        <item name="android:dropDownListViewStyle">@style/servicebox_DropDownListView</item>
    </style>

</resources>
