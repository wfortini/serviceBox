<resources>

    
    <style name="AppBaseTheme" parent="android:Theme.Light">       
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Box"/>
    <style name="Box.Button">
        <item name="android:background">@drawable/btn_default_holo_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>
    
    <style name="ServiceBox.BeigeWithIconButton" parent="Box.Button">
        <item name="android:background">@drawable/btn_bg_bege_com_icone_servicebox</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>
    
    <style name="ServiceBox.YellowButton" parent="Box.Button">
        <item name="android:background">@drawable/btn_bg_yellow_trovebox</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>
    
    <style name="ServiceBox.BeigeButton" parent="Box.Button">
        <item name="android:background">@drawable/btn_bg_beige_trovebox</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>
    
    <style name="ServiceBox.OliveButton" parent="Box.Button">
        <item name="android:background">@drawable/btn_bg_olive_trovebox</item>
        <item name="android:textColor">@color/ab_fg_black</item>
    </style>
   

</resources>
